{% include "layouts/base.twig" %} {% block content %} {# data: first_name
insertion last_name score_created_at value #}

<main>
	<section>
		<h1>uitslag</h1>
		<form method="post" action="{{ globals.urlRoot }}/result">
			<select name="session">
				{% for date in sessions %} {% if date.id == selected %}
				<option value="{{ date.id }}" selected>{{ date.date }}</option>
				{% else %}
				<option value="{{ date.id }}">{{ date.date }}</option>
				{% endif %} {% endfor %}
			</select>
			<input type="submit" value="Zoek" />
		</form>
	</section>
	<section>
		{% if scores is empty %}
		<span> Er zijn geen resultaten </span>
		{% else %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Voornaam</th>
					<th>Tussenvoegsel</th>
					<th>Achternaam</th>
					<th>Score</th>
					<th>Datum</th>
				</tr>
			</thead>
			<tbody>
				{% for result in scores %}
				<tr>
					<td>{{ result.first_name }}</td>
					<td>{{ result.insertion }}</td>
					<td>{{ result.last_name }}</td>
					<td>{{ result.value }}</td>
					<td>{{ result.created_at }}</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
		{% endif %}
	</section>
</main>
{% endblock %}
